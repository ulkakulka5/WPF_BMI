<Window x:Class="BMIApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BMI Kalkulator" Height="800" Width="400"
        Background="#FFF0F5">
    <ScrollViewer>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="BMI Kalkulator" FontSize="20" FontWeight="Bold" Foreground="HotPink" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Waga (kg)" Foreground="DeepPink"/>
            <TextBox x:Name="WeightKgTextBox" Margin="0,5"/>

            <Label Content="Waga (funty)" Foreground="DeepPink"/>
            <TextBox x:Name="WeightLbTextBox" Margin="0,5"/>

            <Label Content="Wzrost (cm)" Foreground="DeepPink"/>
            <TextBox x:Name="HeightCmTextBox" Margin="0,5"/>

            <Label Content="Wzrost (cale)" Foreground="DeepPink"/>
            <TextBox x:Name="HeightInchesTextBox" Margin="0,5"/>

            <Label Content="Wzrost (stopy)" Foreground="DeepPink"/>
            <TextBox x:Name="HeightFeetTextBox" Margin="0,5"/>

            <Label Content="Wiek" Foreground="DeepPink"/>
            <TextBox x:Name="AgeTextBox" Margin="0,5"/>

            <Label Content="Plec" Foreground="DeepPink"/>
            <RadioButton x:Name="FemaleRadioButton" GroupName="Gender" Content="Kobieta" IsChecked="True" />
            <RadioButton x:Name="MaleRadioButton" GroupName="Gender" Content="Mezczyzna" />

            <Label Content="Obwod talii (cm)" Foreground="DeepPink"/>
            <TextBox x:Name="WaistCmTextBox" Margin="0,5"/>

            <Label Content="Obwod bioder (cm)" Foreground="DeepPink"/>
            <TextBox x:Name="HipsCmTextBox" Margin="0,5"/> 

            <Button Content="Oblicz BMI" Click="CalculateBMI_Click" Background="HotPink" Foreground="White" Margin="0,10"/>

            <TextBlock x:Name="ResultTextBlock" FontSize="16" Foreground="DeepPink" TextAlignment="Center"/>
            <TextBlock x:Name="TipTextBlock" FontSize="14" Foreground="DeepPink" TextAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap"/>
            <TextBlock x:Name="WHRResultTextBlock" FontSize="16" Foreground="DeepPink" TextAlignment="Center"/>
            <TextBlock x:Name="BMRResultTextBlock" FontSize="16" Foreground="DeepPink" TextAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </ScrollViewer>
</Window>
